# Local environment variables for the Streamlit app
# Do NOT commit real secrets.
# This file is gitignored.

# AWS configuration
AWS_REGION=us-east-1
# Optional AWS profile name used by boto3 (if set, app sidebar can be left blank)
# AWS_PROFILE=aduro_demo

# If you prefer direct static credentials (not recommended), uncomment:
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
# AWS_SESSION_TOKEN=

# Default S3 bucket to store images/embeddings JSON
APP_S3_BUCKET=food-plate-vectors
APP_IMAGES_PREFIX=images/
APP_EMBEDDINGS_PREFIX=embeddings/

# S3 Vectors settings (defaults for the sidebar)
S3V_VECTOR_BUCKET=food-plate-vectors
S3V_INDEX_NAME=test
S3V_INDEX_ARN=arn:aws:s3vectors:us-east-1:995133654003:bucket/food-plate-vectors/index/test

# Bedrock Embedding Models
MODEL_ID=amazon.titan-embed-image-v1
OUTPUT_EMBEDDING_LENGTH=1024

# Claude Vision Model for Image Description Generation
CLAUDE_VISION_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
CLAUDE_VISION_INFERENCE_PROFILE_ARN=arn:aws:bedrock:us-east-1:995133654003:inference-profile/us.anthropic.claude-3-5-sonnet-20241022-v2:0

# Avoid RateLimiting and Throttling
BATCH_CLAUDE_MIN_INTERVAL_SEC=2
BATCH_TITAN_MIN_INTERVAL_SEC=1